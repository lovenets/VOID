<?xml version="1.0" encoding="utf-8" ?>
<ui>

  <!--Main View--> 
  <mainview>
    <button type="SimpleButton" pos="0.3,0.4" text="Actions">
      <event name="OnPress">
        <!--<action target="::ui" component="MonitorUI" method="OpenWindow" arg1="actions" />-->
      </event>
    </button>
    <button type="SimpleButton" pos="0.3,0.6" text="Colors">
      <event name="OnPress">
        <!--<action target="::ui" component="MonitorUI" method="OpenWindow" arg1="colors" />-->
      </event>
    </button>
  </mainview>

  <!--Actions Window--> 
  <window name="actions">
    <button type="SimpleButton" pos="0.5,0.2" text="Bounce">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="StartBouncing" />
      </event>
    </button>
    <button type="SimpleButton" pos="0.5,0.8" text="Stop">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="StopBouncing" />
      </event>
    </button>
  </window>
  
  <!--Colors Window--> 
  <window name="colors">
    <button type="SimpleButton" pos="0.3,0.2" text="Red">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="SetColorRed" />
      </event>
    </button>
    <button type="SimpleButton" pos="0.3,0.8" text="Blue">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="SetColorBlue" />
      </event>
    </button>
    <button type="SimpleButton" pos="0.7,0.8" text="Green">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="SetColorGreen" />
      </event>
    </button>
    <button type="SimpleButton" pos="0.7,0.2" text="Yellow">
      <event name="OnPress">
        <action target="Cube" component="TestScript" method="SetColorYellow" />
      </event>
    </button>
  </window>
</ui>






